{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build: app",
			"platform": "node",
			
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/docker-app/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true,
				"tag":"learningkubernetes.example.io:1.0",
			},
			"node": {
				"package": "${workspaceFolder}/package.json"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: release",
			"dependsOn": [
				"docker-build"
			],
			"platform": "node",
			"node": {
				"package": "${workspaceFolder}/package.json"
			},
			"dockerRun": {
				"ports": [{
					"containerPort": 3000,
					"hostPort": 3000
				}]
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"env": {
					"DEBUG": "*",
					"NODE_ENV": "development"
				}
			},
			"node": {
				"package": "${workspaceFolder}/package.json",
				"enableDebugging": true
			}
		},
	]
}